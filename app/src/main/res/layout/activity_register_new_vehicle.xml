<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_vehicle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterNewVehicleActivity">

    <ImageView
        android:id="@+id/vehicle_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp" />

    <Spinner
        android:id="@+id/vehical_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/vtype"
        android:layout_toEndOf="@id/vtype"
        android:entries="@array/vehicleTypes"
        android:longClickable="false"
        android:spinnerMode="dialog" />

    <TextView
        android:id="@+id/vtype"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="350dp"
        android:text="Vehicle Type" />

    <TextView
        android:id="@+id/vpassengers"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="300dp"
        android:text="Passengers" />

    <EditText
        android:id="@+id/txtSeats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/vpassengers"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="140dp"
        android:layout_toEndOf="@id/vpassengers"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:text="ADD" />

    <TextView
        android:id="@+id/vtitle"
        android:layout_width="100dp"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="250dp"
        android:text="Title" />

    <EditText
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/vtitle"
        android:layout_toEndOf="@id/vtitle"
        android:ems="10"
        android:inputType="textPersonName" />


</RelativeLayout>